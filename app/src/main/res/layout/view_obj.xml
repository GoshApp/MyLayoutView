<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light">
<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#fff">

        <CheckBox
                android:id="@+id/cb_unknown_view"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_cb_unknown_view"
                android:text="Неизвестный вид"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:background="#949494">
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#fff">

            <CheckBox
                    android:id="@+id/cb_picture"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_cb_picture"
                    android:text="Картина"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:background="#949494">
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#fff">

            <CheckBox
                    android:id="@+id/cb_photo"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_cb_photo"
                    android:text="Фотография"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:background="#949494">
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#fff">

            <CheckBox
                    android:id="@+id/cb_illustration"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_cb_illustration"
                    android:text="Иллюстрация"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:background="#949494">
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#fff">

            <CheckBox
                    android:id="@+id/cb_sculpture"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_cb_sculpture"
                    android:text="Скульптура"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:background="#949494">
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#fff">

            <CheckBox
                    android:id="@+id/cb_relief"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_cb_relief"
                    android:text="Рельеф"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:background="#949494">
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#fff">

            <CheckBox
                    android:id="@+id/cb_architecture"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_cb_architecture"
                    android:text="Архитектура"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:background="#949494">
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#fff">

            <CheckBox
                    android:id="@+id/cb_distant_view"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_cb_distant_view"
                    android:text="Отдаленный вид"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:background="#949494">
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#fff">

            <CheckBox
                    android:id="@+id/cb_detail"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_cb_detail"
                    android:text="Деталь"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="#949494">
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#DBD8D8">

            <TextView
                    android:id="@+id/tv_last_ant"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#868383"
                    android:text="Время последнего входа"
                    android:textAllCaps="true"
                    android:gravity="left|bottom"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="10sp"/>
            <TextView
                    android:id="@+id/tv_throw_off_last_ant"
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:textColor="#DD0707"
                    android:text="Сбросить"
                    android:layout_height="match_parent"
                    android:gravity="right|bottom"
                    android:layout_marginBottom="10sp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="#949494"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#fff">
                <TextView
                        android:text="От:"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_from_last_ent"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:background="#fff">
                <TextView
                        android:id="@+id/tv_from_last_ent_data"
                        android:text="Любая"
                        android:gravity="right|center"
                        android:textColor="#818181"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:background="#949494"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#fff">
                <TextView
                        android:text="До:"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_to_last_ent"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:background="#fff">
                <TextView
                        android:id="@+id/tv_to_last_ent_data"
                        android:text="Любая"
                        android:gravity="right|center"
                        android:textColor="#818181"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="#949494">
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#DBD8D8">

            <TextView
                    android:id="@+id/tv_date_creation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#868383"
                    android:text="Время создания"
                    android:textAllCaps="true"
                    android:gravity="left|bottom"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="10sp"/>
            <TextView
                    android:id="@+id/tv_throw_off_user_group"
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:textColor="#DD0707"
                    android:text="Сбросить"
                    android:layout_height="match_parent"
                    android:gravity="right|bottom"
                    android:layout_marginBottom="10sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="#949494"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#fff">
                <TextView
                        android:text="От:"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_date_creation_from"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:background="#fff">
                <TextView
                        android:id="@+id/tv_date_creation_from_data"
                        android:text="Любая"
                        android:gravity="right|center"
                        android:textColor="#818181"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:background="#949494"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#fff">
                <TextView
                        android:text="До:"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_date_creation_to"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:background="#fff">
                <TextView
                        android:id="@+id/tv_date_creation_to_data"
                        android:text="Любая"
                        android:gravity="right|center"
                        android:textColor="#818181"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    android:background="#949494">
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="#DBD8D8">

                <TextView
                        android:id="@+id/tv_recording_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#868383"
                        android:text="Продолжительность записи"
                        android:textAllCaps="true"
                        android:gravity="left|bottom"
                        android:layout_marginLeft="10sp"
                        android:layout_marginBottom="10sp"/>
                <TextView
                        android:id="@+id/tv_throw_off_recording_duration"
                        android:layout_width="match_parent"
                        android:layout_marginRight="15dp"
                        android:textColor="#DD0707"
                        android:text="Сбросить"
                        android:layout_height="match_parent"
                        android:gravity="right|bottom"
                        android:layout_marginBottom="10sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    android:background="#949494">
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal"
                        android:background="#fff">
                    <TextView
                            android:text="from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:layout_weight="1"
                            android:id="@+id/tv_rec_duration_from"/>
                    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                            android:id="@+id/tv_rec_rang_seek"
                            android:layout_height="wrap_content"
                            android:layout_width="200dp"
                            android:layout_gravity="center"
                            app:corner_radius="6"
                            app:bar_color="#B0B4CE"
                            app:bar_highlight_color="#2434AD"
                            app:left_thumb_color="#D5D5D5"
                            app:right_thumb_color="#D5D5D5"
                            app:left_thumb_color_pressed="#B3B1B1"
                            app:right_thumb_color_pressed="#B3B1B1"
                            app:min_value="0"
                            app:max_value="60"
                            android:layout_weight="2"
                            android:gravity="center"/>
                    <TextView
                            android:id="@+id/tv_rec_duration_to"
                            android:text="to"
                            android:gravity="center|right"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    android:background="#949494"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="#DBD8D8">

                <TextView
                        android:id="@+id/tv_author"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#868383"
                        android:text="Автор"
                        android:textAllCaps="true"
                        android:gravity="left|bottom"
                        android:layout_marginLeft="10sp"
                        android:layout_marginBottom="10sp"/>
                <TextView
                        android:id="@+id/tv_throw_off_author"
                        android:layout_width="match_parent"
                        android:layout_marginRight="15dp"
                        android:textColor="#DD0707"
                        android:text="Сбросить"
                        android:layout_height="match_parent"
                        android:gravity="right|bottom"
                        android:layout_marginBottom="10sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    android:background="#949494"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal"
                        android:background="#fff">
                    <TextView
                            android:text="Мои записи"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:layout_weight="9"
                            android:id="@+id/tv_rec_author"/>

                    <RadioButton
                            android:id="@+id/rb_author"
                            android:gravity="center|right"
                            android:padding="2dp"
                            android:layout_gravity="center|right"
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    android:background="#949494"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="#DBD8D8">
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    android:background="#949494"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>